# SG Farmers App Environment Variables
# Copy this file to .env and update with your values

# AWS Configuration
AWS_REGION=eu-west-2
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=sg-farmers-app
ENVIRONMENT=production
DOMAIN_NAME=your-domain.com

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sg_farmers_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sg_farmers_db
DB_USER=postgres
DB_PASSWORD=your-secure-password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
REGISTRATION_API_PORT=3000
SEARCH_API_PORT=3001
CHAT_API_PORT=3002
FRONTEND_PORT=3003

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@sgfarmers.gov.sg

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_PATH=/tmp/uploads

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000  # 1 hour

# External APIs (Optional)
COMPANIES_HOUSE_API_KEY=your-companies-house-api-key
ROYAL_MAIL_API_KEY=your-royal-mail-api-key
WEATHER_API_KEY=your-weather-api-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Only
NODE_ENV=development
DEBUG=sg-farmers:*